<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="345.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zti.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="text" />
    <TextField fx:id="textField" />
    <Button onAction="#onButtonClick" text="Hello!">
        <style>
            -fx-padding: 15;
            -fx-border-width: 4;
            -fx-background-color: #18db4c;
        </style>
    </Button>
</VBox>
